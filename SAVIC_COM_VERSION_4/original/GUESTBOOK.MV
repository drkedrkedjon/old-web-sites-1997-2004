	</MvIF>

	<MvEVAL EXPR = GetSettings()></MvEVAL>

	<MvEVAL EXPR = SetupLinks()></MvEVAL>


</MvFUNCTION>
 

<MvFUNCTION NAME = "GetFormInput">

	<MvASSIGN NAME = "lenny" VALUE = "{len(QUERY_STRING)}"></MvASSIGN>
	<MvASSIGN NAME = "curr_pos" VALUE = "{1}"></MvASSIGN>
	<MvWHILE EXPR = "{curr_pos LE lenny}">
		<MvASSIGN NAME = "a1" VALUE = "{'=' CIN substring(QUERY_STRING,curr_pos,lenny-curr_pos+1)}"></MvASSIGN>
		<MvIF EXPR = "{a1 GT 0}">
			<MvASSIGN NAME = "a2" VALUE = "{'+' CIN substring(QUERY_STRING,curr_pos+a1,lenny-curr_pos-a1+1)}"></MvASSIGN>
			<MvIF EXPR = "{a2 EQ 0}">
				<MvASSIGN NAME = "a2" VALUE = "{lenny-curr_pos-a1+2}"></MvASSIGN>
			</MvIF>
			<MvASSIGN NAME = "x" VALUE = "{substring(QUERY_STRING,curr_pos,a1-1)}"></MvASSIGN>
			<MvASSIGN NAME = "&[x]"
				VALUE = "{substring(QUERY_STRING,curr_pos+a1,a2-1)}"></MvASSIGN>
		</MvIF>
		<MvASSIGN NAME = "curr_pos" VALUE = "{curr_pos + a1 + a2}"></MvASSIGN>
	</MvWHILE>

</MvFUNCTION>


<MvFUNCTION NAME = "CreateDatabase">

	<MvCOMMENT>
		IMPORTANT NOTE: If db fields have same name as form input fields (e.g. "email"),
		the input fields get clobbered (thus call db field something like "dbemail,"
		or use the d.fieldname convention).
	</MvCOMMENT>

	<MvCREATE NAME = "&[dbname];" DATABASE = "&[database];"
               	FIELDS = 
                "	dbdate      CHAR(10),
			dbtime      CHAR(8),
			dbname1     CHAR(40),
                       	dbemail     CHAR(40),
			dbwebsite   CHAR(40),
			dbcity      CHAR(40),
			dbstate     CHAR(40),
			dbcountry   CHAR(40),
       	                dbcomment1  CHAR(250),
			dbcomment2  CHAR(250),
			dbcomment3  CHAR(250)
