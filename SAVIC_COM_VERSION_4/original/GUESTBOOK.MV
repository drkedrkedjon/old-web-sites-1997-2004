	<MvASSIGN NAME = "p_pass2" VALUE = "{ConvertTags(p_pass2)}"></MvASSIGN>

	<MvIF EXPR = "{p_user EQ ''}">
		<MvEVAL EXPR = Error2("no_name2","&[originator];")></MvEVAL>
	</MvIF>

	<MvIF EXPR = "{p_pass1 EQ ''}">
		<MvEVAL EXPR = Error2("empty_password2","&[originator];")></MvEVAL>
	</MvIF>

	<MvIF EXPR = "{' ' CIN p_user}">
		<MvEVAL EXPR = Error2("blank_in_username","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{' ' CIN p_pass1}">
		<MvEVAL EXPR = Error2("blank_in_new_password","&[originator];")></MvEVAL>
	</MvIF>
	</MvIF>

	<MvIF EXPR = "{p_pass1 NE p_pass2}">
		<MvEVAL EXPR = Error2("not_same2","&[originator];")></MvEVAL>
	</MvIF>

	<MvASSIGN NAME = "new_passwd" VALUE = "{p_pass1 CRYPT substring(p_pass1, 1, 2)}"></MvASSIGN>

	<MvASSIGN NAME = "xxx" VALUE = "{fdelete(passwdfile)}"></MvASSIGN>

	<MvEXPORT FILE = "&[passwdfile];" FIELDS = "p_user,new_passwd" DELIMITER = ":"></MvEXPORT>

	<MvCOMMENT> If admin forgot password, we delete just passwd file, they get welcome page,
	    they fill in info, should get admin menu --- this won't happen if action still
	    set to "provide_identity", so clear it now.
	</MvCOMMENT>

	<MvASSIGN NAME = "action" VALUE = "{''}"></MvASSIGN>

</MvFUNCTION>


<MvFUNCTION NAME = "ChangeIdentity" PARAMETERS = "originator">

	<MvASSIGN NAME = "username" VALUE = "{ConvertTags(username)}"></MvASSIGN>
	<MvASSIGN NAME = "password" VALUE = "{ConvertTags(password)}"></MvASSIGN>
	<MvASSIGN NAME = "new_username" VALUE = "{ConvertTags(new_username)}"></MvASSIGN>
	<MvASSIGN NAME = "passwd_1" VALUE = "{ConvertTags(passwd_1)}"></MvASSIGN>
	<MvASSIGN NAME = "passwd_2" VALUE = "{ConvertTags(passwd_2)}"></MvASSIGN>

	<MvIF EXPR = "{username EQ ''}">
		<MvEVAL EXPR = Error2("no_name","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{password EQ ''}">
		<MvEVAL EXPR = Error2("empty_password2","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{' ' CIN new_username}">
		<MvEVAL EXPR = Error2("blank_in_username","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{' ' CIN passwd1}">
		<MvEVAL EXPR = Error2("blank_in_new_password","&[originator];")></MvEVAL>
	</MvIF>
	</MvIF>
	</MvIF>
	</MvIF>

	<MvIF EXPR = "{passwd_1 NE passwd_2}">
		<MvEVAL EXPR = Error2("not_same","&[originator];")></MvEVAL>
	</MvIF>

	<MvIMPORT FILE = "&[passwdfile];" FIELDS = "usrname,passwd" DELIMITER = ":">
	</MvIMPORT>

	<MvASSIGN NAME = "test_passwd" VALUE = "{password CRYPT substring(passwd, 1, 2)}"></MvASSIGN>

	<MvIF EXPR = "{test_passwd NE passwd}">
		<MvEVAL EXPR = Error2("bad_passwd2","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{username NE usrname}">
		<MvEVAL EXPR = Error2("bad_usrname2","&[originator];")></MvEVAL>
	<MvELSE></MvELSE>
		<MvIF EXPR = "{passwd_1 NE ''}">
			<MvASSIGN NAME = "new_passwd" VALUE = "{passwd_1 CRYPT substring(passwd, 1, 2)}"></MvASSIGN>
		<MvELSE></MvELSE>
			<MvASSIGN NAME = "new_passwd" VALUE = "{test_passwd}"></MvASSIGN>
		</MvIF>

		<MvIF EXPR = "{new_username NE ''}">
			<MvASSIGN NAME = "new_usrname" VALUE = "{new_username}"></MvASSIGN>
			<MvIF EXPR = "{passwd_1 EQ ''}">
				<MvASSIGN NAME = "passwd_1" VALUE = "{password}"></MvASSIGN>
			</MvIF>
		<MvELSE></MvELSE>
			<MvIF EXPR = "{passwd_1 EQ ''}">
				<MvEVAL EXPR = Error2("empty_password","&[originator];")></MvEVAL>
			</MvIF>
			<MvASSIGN NAME = "new_usrname" VALUE = "{usrname}"></MvASSIGN>
		</MvIF>

		<MvASSIGN NAME = "xxx" VALUE = "{fdelete(passwdfile)}"></MvASSIGN>
		<MvEXPORT FILE = "&[passwdfile];" FIELDS = "new_usrname,new_passwd" DELIMITER = ":"></MvEXPORT>
	</MvIF>
	</MvIF>

	<MvCOMMENT> If changed or not, new_usrname has curr val </MvCOMMENT>
	<MvASSIGN NAME = "parm_user" VALUE = "{new_usrname}"></MvASSIGN>

	<MvIF EXPR = "{passwd_1 NE ''}">
		<MvASSIGN NAME = "parm_pass" VALUE = "{passwd_1}"></MvASSIGN>
	</MvIF>

	<MvEVAL EXPR = ReturnHtml2()></MvEVAL>

</MvFUNCTION>


