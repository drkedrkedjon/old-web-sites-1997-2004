			<MvEVAL EXPR = ChooseAdminFunction(p_user,p_pass1)></MvEVAL>
		<MvELSE></MvELSE>
			<MvEVAL EXPR = ChooseAdminFunction(parm_user,parm_pass)></MvEVAL>
		</MvIF>
