			<MvEVAL EXPR = ProvideIdentity("ShowProvideIdentity")></MvEVAL>
		<MvELSE></MvELSE>
			<MvIF EXPR = "{parm_func EQ ''}">	<MvCOMMENT>## 1st time in </MvCOMMENT>
				<MvEVAL EXPR = ShowWelcome()></MvEVAL>
			<MvELSE></MvELSE>
				<MvEVAL EXPR = ShowProvideIdentity()></MvEVAL>
			</MvIF>
			<MvEXIT></MvEXIT>
		</MvIF>
	</MvIF>

	<MvASSIGN NAME = "configfile" VALUE = "{dirprefix $ '/' $ config_file}"></MvASSIGN>
	<MvIF EXPR = "{NOT fexists(configfile)}">
		<MvEVAL EXPR = SetupLinks()></MvEVAL>	<MvCOMMENT> Don't have title yet, but don't care </MvCOMMENT>
