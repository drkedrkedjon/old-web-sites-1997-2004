<MvCOMMENT>######################################################################
# Convert tags to long form.  E.g. <xxx> becomes &lt;xxx&gt;                    # 
#                                                                               #
# This is necessary because Internet Explorer won't display textareas with      #
# their HTML intact, but rather "executes" it as HTML.  So we have to convert   #
# HTML to harmless display form for display, and then back to active form       #
# when receiving the textarea as submitted in a form for storage and actual use.#
#                                                                               #
#####################################################################</MvCOMMENT>

<MvFUNCTION NAME = "ConvertTags" PARAMETERS = "infield">

	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,less,longless)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,greater,longgreater)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,dquote,longdquote)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,quote,longquote)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,nbsp,longnbsp)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'[','&#091;')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,']','&#093;')}"></MvASSIGN>

	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'(','&#040;')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,')','&#041;')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'!','&#033;')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'?','&#063;')}"></MvASSIGN>
	<MvCOMMENT>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,';','&#059;')}"></MvASSIGN>
	</MvCOMMENT>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'=','&#061;')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,asciichar(255),'')}"></MvASSIGN>
	<MvFUNCRETURN VALUE = "{infield}"></MvFUNCRETURN>

</MvFUNCTION>


<MvCOMMENT>######################################################################
# Convert tags to short form.  E.g. &lt;xxx&gt; becomes <xxx>                   # 
#                                                                               #
# This is necessary because Internet Explorer won't display textareas with      #
# their HTML intact, but rather "executes" it as HTML.  So we have to convert   #
# HTML to harmless display form for display, and then back to active form       #
# when receiving the textarea as submitted in a form for storage and actual use.#
#                                                                               #
#####################################################################</MvCOMMENT>

<MvFUNCTION NAME = "ReconvertTags" PARAMETERS = "infield">

	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longdquote,dquote)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longnbsp,nbsp)}"></MvASSIGN>

	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longless,less)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longgreater,greater)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longquote,quote)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,longnbsp,nbsp)}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#091;','[')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#093;',']')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#040;','(')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#041;',')')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#033;','!')}"></MvASSIGN>
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#063;','?')}"></MvASSIGN>
	<MvCOMMENT>                                                     
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#059;',';')}"></MvASSIGN>
	</MvCOMMENT>                                                    
	<MvASSIGN NAME = "infield" VALUE = "{glosub(infield,'&#061;','=')}"></MvASSIGN>

	<MvFUNCRETURN VALUE = "{infield}"></MvFUNCRETURN>

</MvFUNCTION>
