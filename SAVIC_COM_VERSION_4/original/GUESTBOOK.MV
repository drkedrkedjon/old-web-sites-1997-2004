<MvFUNCTION NAME = "Initialization">
	<MvIF EXPR = "{ nargs GT 1 AND arg2 EQ 'admin' }">
		<MvASSIGN NAME = "parm_func" VALUE="{ 'admin' }"></MvASSIGN>
	<MvELSE>
		<MvEVAL EXPR = GetFormInput()></MvEVAL>
	</MvIF>

	<MvIF EXPR = "{NOT fexists(dirprefix)}">
		<MvASSIGN NAME = "x" VALUE = "{fmkdir(dirprefix)}"></MvASSIGN>
	</MvIF>

	<MvIF EXPR = "{NOT fexists(database)}">
		<MvEVAL EXPR = CreateDatabase()></MvEVAL>
	</MvIF>

	<MvASSIGN NAME = "passwdfile" VALUE = "{dirprefix $ '/' $ passwd_file}"></MvASSIGN>
	<MvIF EXPR = "{NOT fexists(passwdfile)}">
