<MvFUNCTION NAME = "ShowRemoveEntries">

	<MvIF EXPR = "{parm_starting_root EQ ''}">
		<MvASSIGN NAME = "parm_starting_root" VALUE = "{'1'}"></MvASSIGN>
	</MvIF>
	<MvEVAL EXPR = FindStartingEntry(numberofentries_admin,backintime,forwardintime,parm_starting_root)></MvEVAL>
	<MvASSIGN NAME = "skip_amount" VALUE = "{starting_entry - 1}"></MvASSIGN>
	<MvOPEN NAME = "&[dbname];" DATABASE = "&[database];" INDEXES = ""></MvOPEN>
	<MvSKIP ROWS = "&[skip_amount];"></MvSKIP>
	<MvEVAL EXPR = ShowRemoveHeader()></MvEVAL>
	<MvASSIGN NAME = "entry_count" VALUE = "{'0'}"></MvASSIGN>
	<MvASSIGN NAME = "is_last_page" VALUE = "{'0'}"></MvASSIGN>

	<MvIF EXPR = "{recno EQ totrec}">
		<MvEVAL EXPR = AddAdminLine(parm_admin_flag,parm_user,parm_pass)></MvEVAL>
		<MvASSIGN NAME = "is_last_page" VALUE = "{'1'}"></MvASSIGN>
	<MvELSE></MvELSE>
		<MvWHILE EXPR = "{entry_count LT numberofentries_admin}">
			<MvEVAL EXPR = AddAdminLine(parm_admin_flag,parm_user,parm_pass)></MvEVAL>
			<MvASSIGN NAME = "entry_count" VALUE = "{entry_count + 1}"></MvASSIGN>
			<MvSKIP></MvSKIP>
			<MvIF EXPR = "{recno EQ totrec}">
				<MvIF EXPR = "{entry_count LT numberofentries_admin}">
					<MvEVAL EXPR = AddAdminLine(parm_admin_flag,parm_user,parm_pass)></MvEVAL>
					<MvASSIGN NAME = "is_last_page" VALUE = "{'1'}"></MvASSIGN>
				</MvIF>
				<MvWHILESTOP></MvWHILESTOP>
			</MvIF>
		</MvWHILE>
	</MvIF>
	<MvASSIGN NAME = "ending_item" VALUE = "{recno}"></MvASSIGN>
	<MvCLOSE NAME = "&[dbname];"></MvCLOSE>

	<MvEVAL EXPR = ShowRemoveWrapup(numberofentries_admin)></MvEVAL>

</MvFUNCTION>


<MvFUNCTION NAME = "FindStartingEntry" PARAMETERS = "num_to_view,backintime,forwardintime,startingroot">

	<MvIF EXPR = "{forwardintime NE ''}">
		<MvASSIGN NAME = "starting_entry" VALUE = "{startingroot + num_to_view}"></MvASSIGN>
	<MvELSE></MvELSE>	
	<MvIF EXPR = "{backintime NE ''}">
		<MvASSIGN NAME = "starting_entry" VALUE = "{startingroot - num_to_view}"></MvASSIGN>
	<MvELSE></MvELSE>
		<MvASSIGN NAME = "starting_entry" VALUE = "{'1'}"></MvASSIGN>
	</MvIF>
	</MvIF>

	<MvASSIGN NAME = "starting_root" VALUE = "{starting_entry}"></MvASSIGN>

</MvFUNCTION>


<MvFUNCTION NAME = "ShowRemoveHeader">

	&[ON];&[header];<title>Remove Entries</title>&[crlf];&[OFF];
	&[ON];<center><h1>Remove Entries from &[title];</h1></center>&[crlf];&[OFF];
	&[ON];<ul>Select below those entries you wish to remove.&[crlf];&[OFF];
	&[ON];</ul><p></p>&[crlf];&[OFF];

	&[ON];<hr width=90%><center><font size=-1>&[crlf];&[OFF];
	&[ON];[ <a href="&[documenturl];parm_func=admin+parm_admin_func=null+parm_user=&[parm_user];+parm_pass=&[parm_pass];">&[title2];</a> ]&[crlf];&[OFF];
	&[ON];</font></center><hr width=90%>&[crlf];&[OFF];

	&[ON];<p>&[crlf];&[OFF];

	&[ON];<form method=POST action="&[documenturl];parm_func=admin+parm_admin_func=null+parm_user=&[parm_user];+parm_pass=&[parm_pass];+parm_starting_root=&[starting_root];">&[crlf];&[OFF];
	&[ON];<input type=hidden name="action" value="remove_entries"></INPUT>&[crlf];&[OFF];
	&[ON];<input type=hidden name="start_item" value="&[recno];"></INPUT>&[crlf];&[OFF];
	
	&[ON];<center>&[crlf];&[OFF];
	&[ON];<table border width="90%">&[crlf];&[OFF];
	&[ON];<tr><th>Remove?</th><th>Date</th><th>Time</th><th>Author</th><th>Beginning of Comments</th></tr>&[crlf];&[OFF];&[crlf];&[OFF];

</MvFUNCTION>


<MvFUNCTION NAME = "ShowRemoveWrapup" PARAMETERS = "entries">

	&[ON];</table>&[crlf];&[OFF];
	&[ON];<p>&[crlf];&[OFF];
	&[ON];<input type=submit value="Remove Messages"></INPUT> <input type=reset></INPUT>&[crlf];&[OFF];

	<MvIF EXPR = "{is_last_page NE '1'}">
		&[ON];<input name="forwardintime" type="submit" value="Next Page"></INPUT>&[crlf];&[OFF];
	</MvIF>

	<MvIF EXPR = "{starting_root GT entries}">
		&[ON];<input name="backintime" type="submit" value="Previous Page"></INPUT>&[crlf];&[OFF];
	</MvIF>

	&[ON];<input type=hidden name="end_item" value="&[ending_item];"></INPUT>&[crlf];&[OFF];
	&[ON];</form></p>&[crlf];&[OFF];

	&[ON];<hr width=90%><center><font size=-1>&[crlf];&[OFF];
	&[ON];[ <a href="&[documenturl];parm_func=admin+parm_admin_func=null+parm_user=&[parm_user];+parm_pass=&[parm_pass];">&[title2];</a> ]&[crlf];&[OFF];
	&[ON];</font></center>&[crlf];&[OFF];

	&[ON];</center>&[crlf];&[OFF];

</MvFUNCTION>


<MvFUNCTION NAME = "AddAdminLine" PARAMETERS = "x,y,z">

	<MvASSIGN NAME = "print_comment" VALUE = "{substring(dbcomment1,1,50)}"></MvASSIGN>

	&[ON];<tr>&[crlf];&[OFF];
	<MvASSIGN NAME = "l.entry" VALUE = "{'form_' $ &[recno];}"></MvASSIGN>
	&[ON];<td align="center"><input type=checkbox name="&[l.entry];" align="center"></INPUT></td>&[crlf];&[OFF];
	&[ON];<td align="center">&[dbdate];</td>&[crlf];&[OFF];
	&[ON];<td align="center">&[dbtime];</td>&[crlf];&[OFF];
	&[ON];<td>&[dbname1];</td>&[crlf];&[OFF];
	&[ON];<td>&[print_comment];</td>&[crlf];&[OFF];
	&[ON];</tr>&[crlf];&[OFF];

</MvFUNCTION>


<MvCOMMENT>#################################################################
# Remove Action                                                            #
#									   #
#	Go through only those database records in the range of the         #
#	entries appearing on the page just displayed.  If the entry        #
#	is marked for deletion, remove it.				   #
################################################################</MvCOMMENT>

<MvFUNCTION NAME = "RemoveEntries">

	<MvEVAL EXPR = RemoveSetup()></MvEVAL>

	<MvASSIGN NAME = "num_no_file" VALUE = "{'0'}"></MvASSIGN>
	<MvASSIGN NAME = "num_not_removed" VALUE = "{'0'}"></MvASSIGN>
	<MvASSIGN NAME = "num_attempted" VALUE = "{'0'}"></MvASSIGN>
	<MvWHILE EXPR = "{NOT &[dbname];.d.eof}">
		<MvCOMMENT> If checked for removal </MvCOMMENT>                                            
		<MvASSIGN NAME = "w1" VALUE = "{'form_' $ recno}"></MvASSIGN>
		<MvASSIGN NAME = "w2" VALUE = "{&[w1];}"></MvASSIGN>
		<MvIF EXPR = "{w2 EQ 'on'}">
			<MvDELETE NAME = "&[dbname];"></MvDELETE>
			<MvASSIGN NAME = "num_attempted" VALUE = "{num_attempted + 1}"></MvASSIGN>
			<MvIF EXPR = "{num_attempted GT 1}">
				<MvASSIGN NAME = "{'attempted' $ &[num_attempted];}"
					VALUE = "{'& \"' $ dbdate $ ' ' $ dbtime $ '\"'}"></MvASSIGN>
			<MvELSE></MvELSE>
				<MvASSIGN NAME = "{'attempted' $ &[num_attempted];}"
					VALUE = "{'\"' $ dbdate $ ' ' $ dbtime $ '\"'}"></MvASSIGN>
			</MvIF>
		</MvIF>
		<MvSKIP></MvSKIP>
	</MvWHILE>

	<MvPACK NAME = &[dbname];></MvPACK>
	<MvCLOSE NAME = "&[dbname];"></MvCLOSE>

	<MvEVAL EXPR = ReturnHtml()></MvEVAL>

</MvFUNCTION>


<MvFUNCTION NAME = "RemoveSetup">

	<MvASSIGN NAME = "username" VALUE = "{parm_user}"></MvASSIGN>
	<MvASSIGN NAME = "password" VALUE = "{parm_pass}"></MvASSIGN>
	<MvEVAL EXPR = CheckIdentity()></MvEVAL>

	<MvASSIGN NAME = "roots_displayed_count" VALUE = "{'0'}"></MvASSIGN>
	<MvOPEN NAME = "&[dbname];" DATABASE = "&[database];" INDEXES = ""></MvOPEN>
	<MvFILTER NAME = "&[dbname];"
		FILTER = "{recno GE start_item AND recno LE end_item}"></MvFILTER>
	<MvASSIGN NAME = "roots_per_page" VALUE = "{numberofentries_admin}"></MvASSIGN>

</MvFUNCTION>


<MvFUNCTION NAME = "ReturnHtml">

	&[ON];&[header];&[crlf];&[OFF];
	&[ON];<center><h1>Results of &[title]; Entry Removal</h1></center>&[crlf];&[OFF];

	&[ON];<blockquote>Below is a short summary of what entries were removed.&[crlf];&[OFF];
	&[ON];<p></p></blockquote><hr width=90%><p>&[crlf];&[OFF];

	&[ON];<blockquote><b>Entries Removed:</b>&[crlf];&[OFF];
	<MvASSIGN NAME = "subscript" VALUE = "{'1'}"></MvASSIGN>
	<MvWHILE EXPR = "{subscript LE num_attempted}">
		<MvASSIGN NAME = "w1" VALUE = "{'attempted' $ &[subscript];}"></MvASSIGN>
		<MvASSIGN NAME = "w2" VALUE = "{&[w1];}"></MvASSIGN>
		&[ON];&[w2];&[longspace];&[crlf];&[OFF];
		<MvASSIGN NAME = "subscript" VALUE = "{subscript + 1}"></MvASSIGN>
	</MvWHILE>
	&[ON];<p>&[crlf];&[OFF];

	<MvIF EXPR = "{num_not_removed GT '0'}">
		&[ON];<b>Entries That Could Not Be Deleted:</b>&[crlf];&[OFF];
		<MvASSIGN NAME = "subscript" VALUE = "{'1'}"></MvASSIGN>
		<MvWHILE EXPR = "{subscript LE num_not_removed}">
			<MvASSIGN NAME = "w1" VALUE = "{'not_removed' $ &[subscript];}"></MvASSIGN>
			<MvASSIGN NAME = "w2" VALUE = "{&[w1];}"></MvASSIGN>
			&[ON];&[w2];&[longspace];&[crlf];&[OFF];
			<MvASSIGN NAME = "subscript" VALUE = "{subscript + 1}"></MvASSIGN>
		</MvWHILE>
		&[ON];<p>&[crlf];&[OFF];
	</MvIF>	

	<MvIF EXPR = "{num_no_file GT '0'}">
		&[ON];<b>Entries Not Found:</b>&[crlf];&[OFF];
		<MvASSIGN NAME = "subscript" VALUE = "{'1'}"></MvASSIGN>
		<MvWHILE EXPR = "{subscript LE num_no_file}">
			<MvASSIGN NAME = "w1" VALUE = "{'no_file' $ &[subscript];}"></MvASSIGN>
			<MvASSIGN NAME = "w2" VALUE = "{&[w1];}"></MvASSIGN>
			&[ON];&[w2];&[longspace];&[crlf];&[OFF];
			<MvASSIGN NAME = "subscript" VALUE = "{subscript + 1}"></MvASSIGN>
		</MvWHILE>
		&[ON];<p>&[crlf];&[OFF];
	</MvIF>

	&[ON];</blockquote><hr width=90%><blockquote><center><font size=-1>&[crlf];&[OFF];
	&[ON];[ <a href="&[documenturl];parm_func=admin+parm_admin_func=show_remove_entries+parm_user=&[parm_user];+parm_pass=&[parm_pass];">Remove Entries</a> ] &[crlf];&[OFF];
	&[ON];[ <a href="&[documenturl];parm_func=admin+parm_admin_func=null+parm_user=&[parm_user];+parm_pass=&[parm_pass];">&[title2];</a> ]&[crlf];&[OFF];
	&[ON];</font></center></p></blockquote>&[crlf];&[OFF];
	&[ON];<hr width=90%>&[admin_banner_ad];&[footer];&[crlf];&[OFF];

	<MvEXIT</MvEXIT>

</MvFUNCTION>


<MvFUNCTION NAME = "GetSettings">

	<MvIMPORT FILE = "&[configfile];" DELIMITER = "!!##!!" FIELDS = 
		"	
			numberofentries,
			numberofentries_admin,
			mailtome,
			mailto,
			mailhost,
			mailfrom,
			time_zone,
			title,
			header,
			linkline,
			footer
		"
	>
	</MvIMPORT>

	<MvIF EXPR = "{numberofentries EQ '0'}">
		<MvASSIGN NAME = "numberofentries" VALUE = "{'1'}"></MvASSIGN>
	</MvIF>
	<MvIF EXPR = "{numberofentries_admin EQ '0'}">
		<MvASSIGN NAME = "numberofentries_admin" VALUE = "{'1'}"></MvASSIGN>
	</MvIF>
	<MvASSIGN NAME = "title2" VALUE = "{title $ ' Admin'}"></MvASSIGN>
                                                    
</MvFUNCTION>


<MvCOMMENT>##########################################################################
# Change Settings                                                          	    #
#########################################################################</MvCOMMENT>

<MvFUNCTION NAME = "ChangeSettings" PARAMETERS = "uname,pass">

	<MvIF EXPR = "{SubmitChanges NE ''}">
		<MvEVAL EXPR = CopySettings()></MvEVAL>
		<MvASSIGN NAME = "xxx" VALUE = "{fdelete(configfile)}"></MvASSIGN>
		<MvEVAL EXPR = ExportSettings()></MvEVAL>
		<MvEVAL EXPR = ChooseAdminFunction(uname,pass)></MvEVAL>
	<MvELSE></MvELSE>		<MvCOMMENT> Show Defaults </MvCOMMENT>
	<MvIF EXPR = "{ShowDefaults NE ''}">
		<MvEVAL EXPR = AssignDefaultSettings()></MvEVAL>
		<MvEVAL EXPR = ShowChangeSettings()></MvEVAL>
	<MvELSE></MvELSE>
	<MvIF EXPR = "{ShowCurrentSettings NE ''}">
		<MvEVAL EXPR = GetSettings()></MvEVAL>
		<MvEVAL EXPR = ShowChangeSettings()></MvEVAL>
	</MvIF>
	</MvIF>
	</MvIF>

</MvFUNCTION>


<MvFUNCTION NAME ="CopySettings">

	<MvASSIGN NAME = "numberofentries" 	VALUE = "{ConvertTags(form_numberofentries)}"></MvASSIGN>
	<MvASSIGN NAME = "numberofentries_admin" VALUE = "{ConvertTags(form_numberofentries_admin)}"></MvASSIGN>

	<MvASSIGN NAME = "mailtome" 		VALUE = "{ConvertTags(form_mailtome)}"></MvASSIGN>
	<MvEVAL EXPR = EditMailto()></MvEVAL>
	<MvASSIGN NAME = "mailhost" 		VALUE = "{ConvertTags(form_mailhost)}"></MvASSIGN>
	<MvEVAL EXPR = EditMailfrom()></MvEVAL>

	<MvASSIGN NAME = "time_zone"	 	VALUE = "{ConvertTags(form_time_zone)}"></MvASSIGN>
	<MvASSIGN NAME = "title" 		VALUE = "{ConvertTags(form_title)}"></MvASSIGN>
	<MvASSIGN NAME = "title2" 		VALUE = "{title $ ' Admin'}"></MvASSIGN>

	<MvASSIGN NAME = "header"		VALUE = "{ReconvertTags(form_header)}"></MvASSIGN>
	<MvASSIGN NAME = "form_linkline"	VALUE = "{ReconvertTags(form_linkline)}"></MvASSIGN>
	<MvASSIGN NAME = "form_footer"		VALUE = "{ReconvertTags(form_footer)}"></MvASSIGN>

	<MvASSIGN NAME = "work_linkline"	VALUE = "{''}"></MvASSIGN>
	<MvASSIGN NAME = "a1"			VALUE = "{'view\"\>' CIN form_linkline}"></MvASSIGN>
	<MvIF EXPR = "{a1 GT '0'}">
		<MvASSIGN NAME = "work_linkline"
			 VALUE = "{work_linkline $ substring(form_linkline,1,a1+5)}"></MvASSIGN>
		<MvASSIGN NAME = "work_linkline"
			 VALUE = "{work_linkline $ title}"></MvASSIGN>
		<MvASSIGN NAME = "a2"
